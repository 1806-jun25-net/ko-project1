@model List<PizzaStore.WebApp.Models.Pizza>

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].OrderID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].PizzaSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Pepperoni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Chicken)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Ham)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Sausage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Mushroom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Onion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Pineapple)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Jalapeno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Olive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Tomato)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PizzaSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
