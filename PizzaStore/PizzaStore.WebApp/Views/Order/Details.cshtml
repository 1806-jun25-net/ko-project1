                    @Html.DisplayFor(modelItem => item.Chicken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sausage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mushroom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Onion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pineapple)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jalapeno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Olive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tomato)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
